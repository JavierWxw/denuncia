<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Denuncia Ciudadana" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar sesion"
            android:textColor="#000000"
            android:textSize="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Email"
            android:textColor="#9C0A0A"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/login_email"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:paddingRight="25dp"
            android:ems="10"

            android:hint="Ingresa tu email"
            android:inputType="textEmailAddress"
            android:paddingStart="12px"
            android:paddingEnd="12px"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="14sp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Clave"
            android:textColor="#9C0A0A"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/login_clave"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Ingresa tu clave"
            android:inputType="numberPassword"
            android:paddingStart="12px"
            android:paddingEnd="12px"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="14sp"
            />

        <CheckBox
            android:id="@+id/opt1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="Encargado"
            android:buttonTint="#BC2020"
            />


        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:onClick="signIn"
            android:text="entrar"

            />



        <Button
            android:id="@+id/login_button"
            android:layout_width="277dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            android:text="Entrar con Google "
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:onClick="login_button"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:onClick="launchRegister"
            android:text="Â¿No tienes cuenta? Registrate Aqui"
            android:textColor="#03A9F4"

            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>